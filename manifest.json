{
  "manifest_version": 3,
  "name": "Drag2Anki",
  "version": "1.0.0",
  "description": "일본어와 영어 학습을 위한 올인원 크롬 익스텐션, 드래그로 번역하고 Anki 카드로 바로 저장!",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "webRequest"
  ],
  "host_permissions": [
    "http://localhost:8765/*",
    "http://localhost:3001/*",
    "https://drag2ankijpproxy-production.up.railway.app/*",
    "https://kanjiapi.dev/*",
    "https://www.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Drag2Anki 설정",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle_extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "익스텐션 토글"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ "data/hanja.json", "data/jp_simp_to_kr_trad.json", "dict/*" ],
      "matches": ["<all_urls>"]
    }
  ]
}